<div class="container">
    <Section class="banner ">
        <div class="logo text-center  bg-dark">
            <a href="#"><img src="http://pngimg.com/uploads/adidas/adidas_PNG17.png" alt="" width="100"></a>
        </div>
    </Section>

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark mt-2">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01"
                aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                <a class="navbar-brand" href="/">Trang chủ</a>
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">

                    </li>

                </ul>
                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>
        </nav>
    </header>
    <div class="banner">
        <div id="demo" class="carousel slide" data-ride="carousel">
            <ul class="carousel-indicators">
                <li data-target="#demo" data-slide-to="0" class="active"></li>
                <li data-target="#demo" data-slide-to="1"></li>
                <li data-target="#demo" data-slide-to="2"></li>
            </ul>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="https://wallpapercave.com/wp/wp2183943.jpg" alt="Los Angeles" width="1110" height="300">
                    <div class="carousel-caption">
                        <h3>Puma</h3>

                    </div>
                </div>
                <div class="carousel-item">
                    <img src="http://getwallpapers.com/wallpaper/full/a/e/7/808305-cristiano-ronaldo-wallpaper-nike-mercurial-2018-2560x1440-for-windows.jpg"
                        alt="Chicago" width="1110" height="300">
                    <div class="carousel-caption">
                        <h3>Nike Superfly</h3>

                    </div>
                </div>
                <div class="carousel-item">
                    <img src="https://pbs.twimg.com/media/DIABw-YWAAASwHN.jpg" alt="New York" width="1110" height="300">
                    <div class="carousel-caption">
                        <h3>Adidas Nemeziz</h3>

                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#demo" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </a>
            <a class="carousel-control-next" href="#demo" data-slide="next">
                <span class="carousel-control-next-icon"></span>
            </a>
        </div>
    </div>


    <div class="d-flex justify-content-between py-3">
        <h2 class="m-0 p-0">Danh sách sản phẩm</h2>
        <a href="/" class="btn btn-primary">User</a>
        <a href="/products/add" class="btn btn-primary">Thêm</a>
    </div>

    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Tên sản phẩm</th>
                <th>Ảnh</th>
                <th>Giá/Euro</th>
                <th>Mô tả</th>
                <th>
                </th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <td>{{this.name}}</td>
                <td>
                    <img src="{{this.image}}" width="100">
                </td>
                <td>{{this.price}} (Euro)</td>
                <td>{{this.description}}</td>
                <td class="text-center" width="200">
                    <a href="/products/edit/{{this._id}}" class="btn btn-info">Sửa</a>

                    <a href="javascript:void(0);"
                        onclick="confirmDelete('/products/remove/{{this._id}}', '{{this.name}}')"
                        class="btn btn-danger">Xóa</a>
                    <a href="/products/detail/{{this._id}}" class="btn btn-danger">Chi tiết</a>


                </td>
            </tr>
            {{/each}}



        </tbody>
    </table>
    <!-- Footer -->
    <footer class="page-footer font-small bg-dark mt-2">

        <!-- Copyright -->
        <div class="footer-copyright text-center py-3 text-light">© 2019 Copyright:
            <a href="https://www.instagram.com/nguyenvu.27/"> INSTAGRAN</a>
        </div>
        <!-- Copyright -->

    </footer>
    <!-- Footer -->

    <script>
        function confirmDelete(url, product) {
            var conf = confirm(`Bạn có chắc chắn muốn xóa sản phẩm: ${product} `);
            if (conf == true) {
                window.location.href = url;
            }
        }
    </script>